{{!
    @template report_usage/tabs

    Displays the nav-tabs for chart and table

    Example context (json):
    {
        "table": "table in raw html"
    }
}}
<ul class="nav nav-tabs" role="tablist">
    <li class="nav-item">
        <a class="nav-link {{#table-tab}}active{{/table-tab}}" id="table-tab" data-toggle="tab" href="#table" role="tab" aria-controls="table" aria-selected="true">Tabelle</a>
    </li>
    <li class="nav-item">
        <a class="nav-link {{#chart-tab}}active{{/chart-tab}}" id="chart-tab" data-toggle="tab" href="#chart" role="tab" aria-controls="chart" aria-selected="false">Liniendiagramm</a>
    </li>
</ul>
<div class="tab-content">
    <div class="tab-pane fade {{#table-tab}}show active{{/table-tab}}" id="table" role="tabpanel" aria-labelledby="table-tab">{{{table}}}</div>
    <div class="tab-pane fade {{#chart-tab}}show active{{/chart-tab}}" id="chart" role="tabpanel" aria-labelledby="chart-tab"><canvas id="report_usage_chart" width="800" height="400"></canvas></div>
</div>